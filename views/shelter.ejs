<div class="container-fluid container-main container-chat">
    <%- include('tab-header', {
        title: 'Shelter List',
        backButton: true,
        backButtonTarget: 'resources'
    }) %>
    <!-- Modal -->
    <div class="modal fade" id="postMessageModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Update Your Message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="margin-bottom: 15px;">
                    <form id="modalPostMessageForm" enctype="multipart/form-data">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="modalMessageInput" name="message"
                                placeholder="Update your Posts...">
                            <input type="file" id="modalPhotoInput" name="photo" style="display: none;">
                            <div class="input-group-append">
                                <button type="button" class="btn btn-secondary" id="modalUploadTrigger" onclick="$('#modalPhotoInput').click();">
                                    <i class="fas fa-image"></i>
                                </button>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" onclick="shelter.updateTrigger();">
                            <i class="fas fa-paper-plane"></i> Update
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <ul class="chat-message-list" id="messages">
        <!-- Messages will be dynamically inserted here -->
    </ul>
    <form id="postMessageForm" class="fixed-bottom-input" enctype="multipart/form-data">
        <div class="input-group">
            <input type="text" class="form-control" id="messageInput" name="message" placeholder="Type your Posts..."
                required>
            <!-- Hidden file input -->
            <input type="file" id="photoInput" name="photo" style="display: none;">
            <div class="input-group-append">
                <!-- Icon to open file dialog and submit form -->
                <button type="button" class="btn btn-secondary" id="uploadTrigger" onclick="$('#photoInput').click();">
                    <i class="fas fa-image"></i>
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </form>
</div>